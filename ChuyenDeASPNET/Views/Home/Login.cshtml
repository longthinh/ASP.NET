@model ChuyenDeASPNET.Context.User

@{
    ViewBag.Title = "Login";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, "Nhập địa chỉ Email")
                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, "Nhập mật khẩu")
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                    </div>
                    <div class="form-group text-center">
                        <!-- Thêm lớp text-center -->
                        <input type="submit" name="submit" class="btn btn-primary" value="Đăng nhập" />
                    </div>
                    <p class="text-center mt-4">Chưa có tài khoản? <a href="@Url.Action("Register", "Home")">Đăng ký</a></p>
                }
            </div>
        </div>
    </div>
</div>

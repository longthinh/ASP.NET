                            {
                                <li class="col-6 col-lg-3 col-md-4">
                                    <a href="#" class="item">
                                        <div class="card-body">
                                            <h6 class="title">@item.ProductName</h6>
                                            <img class="img-sm float-right" src="~/Content/images/items/@item.ProductImage" alt="@item.FullDescription">
                                            <p class="text-muted">
                                                <i class=""></i>@item.FullDescription
                                            </p>
                                        </div>
                                    </a>
                                </li>
                            }

                        </ul>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- card.// -->
        </section>
        <!-- =============== SECTION 3 END =============== -->
        <!-- =============== SECTION REQUEST =============== -->

        <section class="padding-bottom">

            <header class="section-heading heading-line">
                <h4 class="title-section text-uppercase">Gửi yêu cầu</h4>
            </header>

            <div class="row">
                <div class="col-md-8">
                    <div class="card-banner banner-quote overlay-gradient" style="background-image: url('~/Content/images/banners/banner9.jpg');">
                        <div class="card-img-overlay white">
                            <h3 class="card-title">Dành cho hệ thống phân phối chính hãng</h3>
                            <p class="card-text" style="max-width: 400px">
                                Kết nối ngay với chúng tôi để biết thêm thông tin
                            </p>
                            <a href="" class="btn btn-primary rounded-pill">Tìm hiểu thêm</a>
                        </div>
                    </div>
                </div> <!-- col // -->
                <div class="col-md-4">

                    <div class="card card-body">
                        <h4 class="title py-3">Hệ thống ủy quyền</h4>
                        <form>
                            <div class="form-group">
                                <input class="form-control" name="" placeholder="iPhone 14 Pro Max,..." type="text">
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <input class="form-control" placeholder="Số lượng" name="" type="text">

                                    <select class="custom-select form-control">
                                        <option>iPhone</option>
                                        <option>Laptop</option>
                                        <option>Phụ kiện</option>
                                        
                                    </select>
                                </div>
                            </div>
                            <div class="form-group text-muted">
                                <p>Chọn yêu cầu:</p>
                                <label class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" value="option1">
                                    <div class="form-check-label">Nhanh</div>
                                </label>
                                <label class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" value="option2">
                                    <div class="form-check-label">Tiết kiệm</div>
                                </label>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-warning">Xác nhận</button>
                            </div>
                        </form>
                    </div>

                </div> <!-- col // -->
            </div> <!-- row // -->
        </section>

        <!-- =============== SECTION REQUEST .//END =============== -->
        <!-- =============== SECTION SERVICES =============== -->
        <section class="padding-bottom">

            <header class="section-heading heading-line">
                <h4 class="title-section text-uppercase">Dịch vụ</h4>
            </header>

            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <article class="card card-post">
                        <img src="~/Content/images/posts/1.jpg" class="card-img-top">
                        <div class="card-body">
                            <h6 class="title">Đảm bảo thương mại</h6>

@model ChuyenDeASPNET.Models.HomeModel

@{ var products = Model.ListProduct;
                var categories = Model.ListCategory; 
    }

<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Website title - bootstrap html template</title>

    <link href="~/Content/~/Content/images/favicon.ico" rel="shortcut icon" type="image/x-icon">


    <!-- jQuery -->
    <script src="~/Scripts/js/jquery-2.0.0.min.js"></script>

    <!-- Bootstrap4 files-->
    <script src="~/Scripts/js/bootstrap.bundle.min.js"></script>


    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />

    <!-- Font awesome 5 -->
    <link href="~/Content/fonts/fontawesome/css/all.min.css" rel="stylesheet" />

    <!-- custom style -->
    <link href="~/Content/css/ui.css" rel="stylesheet" />

    <link href="~/Content/css/responsive.css" rel="stylesheet" />

    <!-- custom javascript -->
    <script src="~/Scripts/js/script.js"></script>

</head>
<body>

    <b class="screen-overlay"></b>

    <!-- ========================= SECTION PAGETOP ========================= -->
    <section class="section-pagetop bg-gray">
        <div class="container">
            <h2 class="title-page">My account</h2>
        </div> <!-- container //  -->
    </section>
    <!-- ========================= SECTION PAGETOP END// ========================= -->
    <!-- ========================= SECTION CONTENT ========================= -->
    <section class="section-content padding-y">
        <div class="container">

            <div class="row">
                <aside class="col-md-3">
                    <nav class="list-group">
                        <a class="list-group-item active" href="@Url.Action("ProfileMain", "Profile")">HỒ SƠ</a>
                        <a class="list-group-item" href="@Url.Action("Address", "Profile")">Địa chỉ</a>
                        <a class="list-group-item" href="@Url.Action("Order", "Profile")">Đơn hàng</a>
                        <a class="list-group-item" href="@Url.Action("Login", "User")">ĐĂNG XUẤT</a>
                    </nav>
                </aside> <!-- col.// -->
                <main class="col-md-9">

                    <article class="card mb-3">
                        <div class="card-body">

                            <figure class="icontext">
                                <div class="icon">
                                    <img class="rounded-circle img-sm border" src="~/Content/images/avatars/thinh.png">
                                </div>
                                <div class="text">
                                    <strong> Mr. Thinh </strong> <br>
                                    <p class="mb-2"> longthinhx@icloud.com  </p>
                                    <a href="#" class="btn btn-light btn-sm">Sửa</a>
                                </div>
                            </figure>
                            <hr>
                            <p>
                                <i class="fa fa-map-marker text-muted"></i> &nbsp; Địa chỉ:
                                <br>
                                193/32 Suối Nho, Định Quán, Đồng Nai, VN. &nbsp
                                <a href="#" class="btn btn-light btn-sm">Sửa</a>
                            </p>



                            <article class="card-group card-stat">
                                <figure class="card bg">
                                    <div class="p-3">
                                        <h4 class="title">38</h4>
                                        <span>Đã mua</span>
                                    </div>
                                </figure>
                                <figure class="card bg">
                                    <div class="p-3">
                                        <h4 class="title">5</h4>
                                        <span>Danh sách mơ ước</span>
                                    </div>
                                </figure>
                                <figure class="card bg">
                                    <div class="p-3">
                                        <h4 class="title">12</h4>
                                        <span>Chờ giao hàng</span>
                                    </div>
                                </figure>
                                <figure class="card bg">
                                    <div class="p-3">
                                        <h4 class="title">50</h4>
                                        <span>Bom hàng</span>
                                    </div>
                                </figure>
                            </article>


                        </div> <!-- card-body .// -->
                    </article> <!-- card.// -->

                    <article class="card  mb-3">
                        <div class="card-body">
                            <h5 class="card-title mb-4">Đã mua gần đây</h5>

                            <div class="row">
                                @foreach (var product in Model.ListProduct
                            .Where(p => p.IsRecommended == true && p.Status == true)
                            .Take(2))
                                {
                            <div class="col-md-6">
                                <figure class="itemside  mb-3">
                                    <div class="aside"><img src="~/Content/images/items/@product.ProductImage" class="border img-sm"></div>
                                    <figcaption class="info">
                                        <time class="text-muted">
                                            <i class="fa"></i>
                                            <strong>@String.Format("{0:N0}", product.Price) đ</strong>
                                        </time>

                                        <p>@product.FullDescription</p>
                                        <span class="text-success">Đã nhận hàng</span>
                                    </figcaption>
                                </figure>
                            </div> <!-- col.// --> }

                                        </div> <!-- row.// -->
                               
                            
                        </div> <!-- card-body .// -->
                    </article> <!-- card.// -->

                </main> <!-- col.// -->
            </div>

        </div> <!-- container .//  -->
    </section>
    <!-- ========================= SECTION CONTENT END// ========================= -->


</body>
</html>
